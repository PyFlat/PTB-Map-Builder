*{
	font-family: Calibri;
}

QWidget{
    background-color: #242424
}
QPlainTextEdit{
    color: white;
    font-size: 20px;
}
QLineEdit{
    color: white;
    font-size: 20px;
    qproperty-alignment: AlignCenter;
    outline: none;
    border: 2px solid #1f6aa5;
    border-radius: 5px;
}
QCheckBox{
    color: white;
    font-size: 20px;
}
QCheckBox::indicator{
    height: 25px;
    width: 25px;
    image: url(icons/unchecked.png);
}
QLabel#current_left_block, QLabel#current_right_block{
    border: 2px solid white;
    border-radius: 3px;
    qproperty-alignment: AlignCenter;
    background-color: #1f6aa5
}
QCheckBox::indicator:checked{
    height: 25px;
    width: 25px;
    image: url(icons/checked.png);
}
QDialog#enemy_edit_msgbox QLabel{
    color: white;
    font-size: 20px;
}
QDialog#enemy_edit_msgbox QPushButton{
    text-align: center;
    padding-left: 5px;
}
QListView {
    background-color: rgb(50, 50, 50);  /* Set the background color */
    color: rgb(200, 200, 200);  /* Set the text color */
    border: 1px solid rgb(100, 100, 100);  /* Add border to the popup */
}
QListView::item {
    padding: 5px;
}
QListView::item:selected {
    background-color: rgb(100, 100, 100);  /* Set the background color for selected item */
    color: rgb(255, 255, 255);  /* Set the text color for selected item */
}
QMessageBox QLabel{
    font-size: 20px;
    color: white;
}
QMessageBox QPushButton{
    padding: 5;
    text-align: center;
}

QPushButton{
    text-align: left;
    padding: 5 5 5 10;
    font-family: Calibri;
    font-size: 20px;
    border: 2px solid white;
    border-radius: 5px;
    background-color: #1f6aa5;
    color: white;
}
QPushButton:hover{
    background-color: #144870;
}
QPushButton#script_compile_dialog_btn{
    text-align: center;
    padding: 4 15 4 15;
}
QMenuBar{
    font-size: 15px;
    color: white;
    margin-left: 5;
}
QMenu::item{
	font-size: 12px;
	color: white;
	padding: 3 5 3 5;
    margin: 3;
    border-radius: 5px;
}
QMenuBar::item{
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    margin: 5 0 0 0;
    padding: 5 10 5 10;
}
QMenu{
    border: 2px solid #535353;
}

QMenu::separator{
    background-color: white;
    height: 1px;
    margin: 0 5 0 5;
}
QMenu::item:selected, QMenuBar::item:selected{
    background-color: #4a4a4a;
}
QPushButton#next_page_btn, QPushButton#prev_page_btn{
	text-align: center;
	padding: 5 0 5 0;
}
QPushButton#next_page_btn:disabled, QPushButton#prev_page_btn:disabled{
	border-color: #999999;
}
QPushButton#placeholder1, QPushButton#placeholder2, QPushButton#placeholder3, QPushButton#placeholder4{
    border: none;
    background-color: #242424
}